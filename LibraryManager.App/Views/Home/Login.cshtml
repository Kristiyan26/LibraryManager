@model LibraryManager.App.ViewModels.Home.LoginVM;

@{
    Layout = "/Views/Shared/_Site.cshtml";
    ViewData["Title"] = "Login";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <fieldset class="border p-4 rounded shadow-sm">
                <legend class="text-center fw-bold mb-4 text-primary">Login</legend>
                <form asp-action="Login" asp-controller="Home" method="post">
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span asp-validation-summary="ModelOnly" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <div class="w-48">
                            <button type="submit" class="btn btn-primary w-100 py-1 fs-5">Login</button>
                        </div>
                        <div class="w-48">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-danger w-100 py-1 fs-5">Cancel</a>
                        </div>
                    </div>

                    <div class="text-center mt-3">
                        <span class="text-muted fs-5">No account? <a href="/Home/SignUp" class="text-primary">Sign up</a></span>
                    </div>

                </form>
            </fieldset>
        </div>
    </div>
</div>
