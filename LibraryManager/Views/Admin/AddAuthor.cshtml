@model LibraryManager.ViewModels.Admin.AddAuthorVM

@{
    Layout = "/Views/Shared/_Site.cshtml";
    ViewData["Title"] = "Add Author";
}

<h2>Add Author</h2>

<form asp-action="AddAuthor" asp-controller="Admin" method="post">
    <div class="form-group">
        <label asp-for="@Model.Author.Name"></label>
        <input asp-for="@Model.Author.Name" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add Author</button>
</form>

<div>
    <a asp-action="Books" asp-controller="Admin">Back to List</a>
</div>