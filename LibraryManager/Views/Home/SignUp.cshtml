
@model LibraryManager.ViewModels.Home.SignUpVM


@{
    Layout = "/Views/Shared/_Site.cshtml";
    ViewData["Title"] = "Login";
}


<fieldset>
    <legend>Create Account</legend>
    <form asp-action="SignUp" asp-controller="Home" method="post">
        <div class="grid">
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.FirstName)</div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.FirstName)
                </div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.FirstName)  </div>
            </div>
            <div class="grid">
                <div class="row">
                    <div class="col-1">@Html.LabelFor(m => m.LastName)</div>
                    <div class="col-2">
                        @Html.TextBoxFor(m => m.LastName)
                    </div>
                    <div class="col-2">@Html.ValidationMessageFor(m => m.LastName)  </div>
                </div>
        <div class="grid">
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.Username)</div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Username)
                </div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.Username)  </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.Password)</div>
                <div class="col-2">
                    @Html.PasswordFor(m => m.Password)
                </div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.Password)  </div>

            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    @Html.ValidationMessage("authError",
                             new { @style = "error right" })
                </div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    <input type="submit" value="SignUp" />
                   
                </div>
            </div>
        </div>
    </form>
</fieldset>
